---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";

import { getCollection } from "astro:content";
const projects = await getCollection("projects");



---

<Layout title="Portafolio">


    <h1 class="text-4xl text-center mt-9 font-bold ">Mis proyectos</h1>
    <main class="flex flex-wrap justify-around items-center">
        {
            
            projects.map((project) => {
                const { data, slug } = project;

                const { title, description, img } = data;

                return (
                    

                    <div class="animate__animated animate__backInUp flex justify-center items-center min-h-screen">
                        <div class="max-w-[720px]">
                            <div class="relative flex flex-col text-white-700 bg-gray-800 shadow-md bg-clip-border rounded-xl w-80">
                                <div class="relative mx-4 mt-4 overflow-hidden text-white-700 bg-white bg-clip-border rounded-xl h-80">
                                    <img
                                    
                                        src={`/${img}`}
                                        alt="card-image"
                                        class="object-cover w-full h-full"
                                    />
                                </div>
                                <div class="p-6">
                                    <div class="flex items-center justify-between mb-2">
                                        <p class="block font-sans text-base antialiased font-medium leading-relaxed text-blue-gray-900">
                                            {title}
                                        </p>
                                    </div>
                                    <p class="block font-sans text-sm antialiased font-normal leading-normal text-white-700 opacity-75">
                                        {description}
                                    </p>
                                </div>
                                <div class="p-6 pt-0">
                                    <a href={`/proyecto/${slug}`} 
                                        class="align-middle select-none font-sans font-bold text-center uppercase transition-all disabled:opacity-50 disabled:shadow-none disabled:pointer-events-none text-xs py-3 px-6 rounded-lg shadow-gray-900/10 hover:shadow-gray-900/20 focus:opacity-[0.85] active:opacity-[0.85] active:shadow-none block w-full bg-purple-600 text-blue-gray-900 shadow-none hover:scale-105 hover:shadow-none focus:scale-105 focus:shadow-none active:scale-100"
                                        type="button"
                                    >
                                        Visualizar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                );
            })
        }
    </main>

    <Footer/>
</Layout>

